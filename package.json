{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon ts-node src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "jest --verbose  src/",
    "db-up": "docker-compose up -d",
    "db-status": "docker-compose ps",
    "db-down": "docker-compose down"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "tslintConfig": {
    "extends": [
      "tslint:latest",
      "tslint-config-prettier"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "no-var-keyword": true,
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-null-keyword": true,
    "prefer-const": true,
    "jsdoc-format": true
  },
  "dependencies": {
    "@types/express-handlebars": "^5.3.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/passport": "^1.0.7",
    "@types/randomstring": "^1.1.7",
    "@types/sequelize": "^4.28.10",
    "@types/socket.io": "^3.0.2",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.3",
    "express-jwt": "^6.1.0",
    "join": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "random-hex": "^1.0.2",
    "randomhex": "^0.1.5",
    "randomstring": "^1.2.1",
    "sequelize": "^6.6.5",
    "socket.io": "^4.1.2",
    "supertest": "^6.1.6",
    "ts-node": "^10.2.1",
    "tslint-config-prettier": "^1.18.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^0.0.42",
    "@types/jest": "^27.0.1",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.1.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  }
}
